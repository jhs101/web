import streamlit as st

# MBTI 설명 데이터
mbti_info = {
    "INTJ": "전략가형 - 독립적이며 분석적인 성향. 장기 계획 수립에 능숙.",
    "INTP": "논리학자형 - 창의적이고 호기심 많으며 아이디어를 탐구하는 것을 즐김.",
    "ENTJ": "통솔자형 - 타고난 리더, 효율성과 논리를 중시.",
    "ENTP": "변론가형 - 토론을 즐기며 새로운 아이디어에 열정적.",
    "INFJ": "옹호자형 - 통찰력 있고 조용하며 깊은 인간관계를 중시.",
    "INFP": "중재자형 - 이상주의적이며 감정이 풍부하고 가치 중심적.",
    "ENFJ": "선도자형 - 타인을 도우려는 성향, 공감 능력이 뛰어남.",
    "ENFP": "활동가형 - 열정적이며 창의적이고 사교적인 성격.",
    "ISTJ": "현실주의자형 - 책임감 있고 신뢰할 수 있는 성격.",
    "ISFJ": "수호자형 - 따뜻하고 인내심 강하며 헌신적인 성향.",
    "ESTJ": "경영자형 - 체계적이고 지도력이 뛰어난 성격.",
    "ESFJ": "집정관형 - 친절하고 사람들과의 조화를 중시.",
    "ISTP": "장인형 - 실용적이고 유연하며 문제 해결 능력이 뛰어남.",
    "ISFP": "모험가형 - 온화하고 감성적이며 예술적 감각이 뛰어남.",
    "ESTP": "사업가형 - 에너지 넘치고 현실적이며 행동 중심.",
    "ESFP": "연예인형 - 사교적이고 즐거움을 추구하는 성격."
}

# Streamlit 앱 제목
st.title("🧠 MBTI 성격유형 설명기")

# 사용자 입력: MBTI 선택
selected_type = st.selectbox("당신의 MBTI 유형을 선택하세요:", list(mbti_info.keys()))

# 선택한 MBTI 설명 표시
if selected_type:
    st.subheader(f"✨ {selected_type} 설명")
    st.write(mbti_info[selected_type])
